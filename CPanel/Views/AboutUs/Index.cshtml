@model IEnumerable<CPanel.Models.DAL.CompanyAboutUs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.rowReordering.js")" type="text/javascript"></script>
  <script type="text/javascript">
      $(document).ready(function () {
          $('#myDataTable').dataTable({"sScrollY": "400px","bScrollCollapse": true, "iDisplayLength": 100,"aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],"sPaginationType": "full_numbers"}).rowReordering({ sURL: "/Departments/UpdateOrder" });
      });
        </script>
<div class="box round first">
<h2>Index</h2>
<div class="block">
                    <table id="myDataTable" class="display">
					<thead>
    <tr>
    <th>
    <a  href="@Url.Action("Create", "AboutUs")"><span></span>Create New</a>
    </th>
        <th>
             Company Profile In  English
        </th>
        <th></th>
    </tr>
					</thead>
                    <tbody>
@foreach (var item in Model) {
    <tr>
    <td></td>
        <td>
        <div  style="height:100px;overflow:hidden;">
           @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.AboutUs_txt_Eng))
           </div>
        </td>
        <td>
        <a  href="@Url.Action("Edit", "AboutUs", new { id = item.id })"><span></span>Edit</a>
        |
        @Html.ActionLink("Remove", "Delete", "AboutUs", new { id = item.id }, new { onclick = "return confirm('Are you sure you wish to delete this Item?');" })
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
<script type="text/javascript">

    $('.datatable').dataTable({"sScrollY": "400px","bScrollCollapse": true, "iDisplayLength": 100,"aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],"sPaginationType": "full_numbers"});
    </script>