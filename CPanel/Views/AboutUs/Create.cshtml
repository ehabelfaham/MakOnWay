@model CPanel.Models.CompanyAboutUsModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<!-- Load TinyMCE -->
    <script src="@Url.Content("~/Scripts/templatescripts/js/tiny-mce/jquery.tinymce.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="box round first">
        <h2>Create Company Profile</h2>
        <div class="block">
        <table id="tableId" cellpadding="10" cellspacing="10" width="100%" style="border-collapse: collapse;">
         <tr>
            <td class="tableTDcls">
           Company Home Aboutus (English) *
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextAreaFor(model => model.HomeTxt_Eng, new { @class = "tinymce" })
            @Html.ValidationMessageFor(model => model.AboutUs_txt_Eng)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">
            Company Home Aboutus (Arabic) *
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextAreaFor(model => model.HomeTxt_Ar, new { @class = "tinymce" })
            @Html.ValidationMessageFor(model => model.AboutUs_txt_Ar)
            </td>
        </tr>
        
         <tr>
            <td class="tableTDcls">
            Company AboutUs (English) *
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextAreaFor(model => model.AboutUs_txt_Eng, new { @class = "tinymce" })
            @Html.ValidationMessageFor(model => model.AboutUs_txt_Eng)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">
            Company AboutUs (Arabic) *
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextAreaFor(model => model.AboutUs_txt_Ar, new { @class = "tinymce" })
            @Html.ValidationMessageFor(model => model.AboutUs_txt_Ar)
            </td>
        </tr>

        
        <tr>
        <td class="tableTDcls">Select Image *</td>
            <td class="tableTDcls"></td>
        <td class="tableTDcls">
        @Html.TextBoxFor(m => m.Image_Path, new { type = "file" })
            @Html.ValidationMessageFor(model => model.Image_Path)
        </td>
        </tr>
        </table>
        <p>
            <input type="submit" value="Create"  class="btn btn-blue"/>
        </p>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
   </div>
   </div>
}

<script type="text/javascript">
    setupTinyMCE();
</script>