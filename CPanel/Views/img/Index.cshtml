@model IEnumerable<CPanel.Models.DAL.ImagesGallery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.rowReordering.js")" type="text/javascript"></script>
  <script type="text/javascript">
      $(document).ready(function () {
          $('#myDataTable').dataTable({"sScrollY": "400px","bScrollCollapse": true, "iDisplayLength": 100,"aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],"sPaginationType": "full_numbers"}).rowReordering({ sURL: "/Product/UpdateOrder" });
      });
        </script>

<h2>Index</h2>

<div class="box round first">
<h2>Index</h2>
<div class="block">
<table id="myDataTable" class="display">
<thead>
    <tr>
        <th><a  href="@Url.Action("Create", "img")"><span></span>Create New</a></th>
        <th>
            Image 
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
        |@Html.ActionLink("Remove", "Delete", new { id = item.Image_id}, new { onclick = "return confirm('Are you sure you wish to delete this Item?');" })
        </td>
        <td>
        
        @if (item.Image_Path != null && item.Image_Path != "")
        {
             <img src="/images/img/@item.Image_Path" width="200px" height="200px" />
        }
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
