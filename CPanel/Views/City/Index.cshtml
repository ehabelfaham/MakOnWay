@model IEnumerable<CPanel.Models.DAL.City>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.rowReordering.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#myDataTable').dataTable({ "sScrollY": "400px", "bScrollCollapse": true, "iDisplayLength": 100, "aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]], "sPaginationType": "full_numbers" }).rowReordering({ sURL: "/Departments/UpdateOrder" });
    });
</script>
<div class="box round first">
    <h2>Index</h2>
    <div class="block">
        <table id="myDataTable" class="display">
            <thead>
                <tr>
                    <th>
                        <a href="@Url.Action("Create", "City")"><span></span>Create New</a>
                    </th>
                    <th>
                        Country Name
                    </th>
                    <th>
                        Arabic Name
                    </th>
                    <th>
                        English Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.EnName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnName)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "City", new { id = item.ID })"><span></span>Edit</a>
                            |@Html.ActionLink("Remove", "Delete", "City", new { id = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this Item?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

