@model IEnumerable<CPanel.Models.DAL.WebSiteTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/templatescripts/js/table/DataTables/jquery.js" type="text/javascript"></script>
<script src="../../Scripts/templatescripts/js/table/DataTables/jquery.dataTables.js"
    type="text/javascript"></script>
<script src="../../Scripts/templatescripts/js/table/DataTables/jquery-ui.js" type="text/javascript"></script>
<script src="../../Scripts/templatescripts/js/table/DataTables/jquery.dataTables.rowReordering.js"
    type="text/javascript"></script>
<script src="../../Scripts/templatescripts/js/table/DataTables/jquery.dataTables.rowGrouping.js"
    type="text/javascript"></script>
  <script type="text/javascript">
      $(document).ready(function () {
          $('#myDataTable').dataTable({ "bSortClasses": false, "sScrollY": "400px","bScrollCollapse": true, "iDisplayLength": 100,"aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],"sPaginationType": "full_numbers" });
      });
        </script>

<div class="box round first">
<h2>Index</h2>
<div class="block">
                    <table id="myDataTable" class="display">
					<thead>
    <tr>
        <th>
            Link
        </th>
        <th><a  href="@Url.Action("Create", "WebSites")"><span></span>Create New</a></th>
    </tr>
					</thead>
                    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WebSite_Src)
        </td>
        <td>
        <a  href="@Url.Action("Edit", "WebSites", new { id = item.id })"><span></span>Edit</a>
        |@Html.ActionLink("Remove", "Delete", "WebSites", new { id = item.id }, new { onclick = "return confirm('Are you sure you wish to delete this Item?');" })
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>