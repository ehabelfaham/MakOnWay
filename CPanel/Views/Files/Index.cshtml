@model IEnumerable<CPanel.Models.DAL.FileUpload>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.rowReordering.js")" type="text/javascript"></script>
  <script type="text/javascript">
      $(document).ready(function () {
          $('#myDataTable').dataTable({ "sScrollY": "400px", "bScrollCollapse": true, "iDisplayLength": 100, "aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]], "sPaginationType": "full_numbers" }).rowReordering({ sURL: "/Departments/UpdateOrder" });
      });
        </script>
<div class="box round first">
<h2>Index</h2>
<div class="block">
                    <table id="myDataTable" class="display">
					<thead>
    <tr>
        <th>
            ImagePath
        </th>
        <th>
    <a  href="@Url.Action("Create", "Files")"><span></span>Create New</a>
        </th>
    </tr>
    </thead><tbody>
@foreach (var item in Model) {
    <tr>
        <td>
           <a target="_blank" href="http://admin.eg-mt.com/UploadFiles/@Html.DisplayFor(modelItem => item.ImagePath)">@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
