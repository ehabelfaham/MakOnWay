@model CPanel.Models.DAL.FileUpload
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box round first">
    <h2>
        Create</h2>
    <div class="block">
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        @using (Html.BeginForm("Create", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ImagePath)
                </div>
                <div class="editor-field">
                    @Html.TextBox("source1", "", new { type = "file" })
                    @Html.ValidationMessageFor(model => model.ImagePath)
                </div>
                <div class="editor-label">
                    Permission
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.IsPublic,(SelectList)ViewBag.IsPublicLst)
                    @Html.ValidationMessageFor(model => model.IsPublic)
                </div>
                <p>
                    <input type="submit" value="Create" />
                </p>
            </fieldset>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
